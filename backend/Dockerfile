FROM python:3.12-slim

ENV PYTHONUNBUFFERED 1
ENV PYTHONPATH=/

WORKDIR /backend

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

ARG DISCORD_BOT_TOKEN
ARG ADMINISTRATOR_ROLE_ID
ARG TEACHER_ROLE_ID
ARG STUDENT_ROLE_ID
ARG GUILD_ID
ARG VITE_SUPABASE_URL
ARG VITE_SUPABASE_SERVICE_ROLE_KEY
ARG SUPABASE_DIRECT_URL
ARG REDIS_URL
ARG FRONTEND_URL

ENV DISCORD_BOT_TOKEN=${DISCORD_BOT_TOKEN}
ENV ADMINISTRATOR_ROLE_ID=${ADMINISTRATOR_ROLE_ID}
ENV TEACHER_ROLE_ID=${TEACHER_ROLE_ID}
ENV STUDENT_ROLE_ID=${STUDENT_ROLE_ID}
ENV GUILD_ID=${GUILD_ID}
ENV VITE_SUPABASE_URL=${VITE_SUPABASE_URL}
ENV VITE_SUPABASE_SERVICE_ROLE_KEY=${VITE_SUPABASE_SERVICE_ROLE_KEY}
ENV SUPABASE_DIRECT_URL=${SUPABASE_DIRECT_URL}
ENV REDIS_URL=${REDIS_URL}
ENV FRONTEND_URL=${FRONTEND_URL}

EXPOSE 8000

CMD ["uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8000"]
